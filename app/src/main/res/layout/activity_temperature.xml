<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <!-- Declare any variables if necessary -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#211951"> <!-- Light background color -->

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:padding="8dp"
            android:layout_gravity="start" />

        <EditText
            android:id="@+id/temperatureInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:autofillHints="temperature"
            android:hint="@string/enter_temperature_hint"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerFrom"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerTo"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/convertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/convert_button_text" />

        <TextView
            android:id="@+id/conversionResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:text="Result will be displayed here" />
    </LinearLayout>
</layout>
